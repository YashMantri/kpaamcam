<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    tools:context="edu.buffalo.cse.ubcollecting.LoopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Number of Times loop should run"/>
        <EditText
            android:id = "@+id/loop_iterations_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Add Questions to the loop"/>

        <com.mobeta.android.dslv.DragSortListView
            android:id="@+id/sub_question_list_view"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            dslv:float_background_color="@color/white"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Questions to the loop"
            android:id="@+id/add_subquestions_button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Submit Loop"
            android:id="@+id/loop_submit_button"/>


    </LinearLayout>

</ScrollView>